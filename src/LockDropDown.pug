script.
    export let name
    export let locked
    export let listItems = []
    export let onLockChange = () => {}

    PubSub.subscribe("Data.changed", () => listItems = listItems);

div.lock-drop-down
    fieldset
        legend {name} 
            sup {listItems.length}

        input(
          "type"="checkbox" 
          bind:checked="{locked}" 
          on:click="{onLockChange}" 
          data-name-for="{name.toLowerCase()}"
        )

        select
            {#each listItems as option}
              option { option }


style.
    legend {
        text-transform: uppercase;
        color: #ff3e00;
        font-size: 2em;
        font-weight: 100;
    }

    sup {
        font-size: x-small;
    }

    fieldset {
        border: 1px solid #ccc;
    }

    select {
        background-color: #eee;
        padding: 0;
        min-width: 90%;
    }

    input {
        width: 20px;
        margin-right: 20px;
    }

    @media (min-width: 640px) {
        select {
            min-width: 50%;
            padding: 20px 50px;
        }
    }
